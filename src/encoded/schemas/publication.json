{
    "title": "Publication",
    "description": "Schema for a publication page.",
    "id": "/profiles/publication.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "title", "abstract"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases"},
        {"$ref": "mixins.json#/schema_version"},
        {"$ref": "mixins.json#/uuid"},
        {"$ref": "mixins.json#/standard_status"}
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "status": {
            "default": "released"
        },
        "title": {
            "title": "Title",
            "description": "Title of the publication or communication.",
            "uniqueKey": true,
            "type": "string"
        },
        "publication_year": {
            "title": "Publication year",
            "description": "The year of publication.",
            "type": "integer"
        },
        "first_author": {
            "title": "First authors",
            "description": "The first author of the publication.",
            "type": "string"
        },
        "journal": {
            "title": "Journal",
            "description": "The journal of the publication.",
            "type": "string"
        },
        "doi": {
            "title": "DOI",
            "description": "A DOI identifier that corresponds to the published work.",
            "type": "string",
            "uniqueKey":  "publication:doi",
            "pattern": "^(10\\.[0-9]{4}[\\d\\s\\S\\:\\.\\/]+)$"
        },
        "pmid": {
            "title": "PubMed ID",
            "description": "A PubMed identifier that corresponds to the published work.",
            "type": "string",
            "uniqueKey":  "publication:pmid",
            "pattern": "^([0-9]+)$"
        },
    },
    "facets": {
        "publication_year": {
            "title": "Publication year"
        },
        "journal": {
            "title": "Journal"
        },
        "status": {
            "title": "Status"
        }
    },
    "columns": {
        "title": {
            "title": "Title"
        },
        "journal": {
            "title": "Journal"
        },
        "citation": {
            "title": "Citation"
        },
        "publication_year": {
            "title": "Publication year"
        },
        "pmid": {
            "title": "PubMed ID"
        },
        "doi": {
            "title": "DOI"
        },
        "datasets": {
            "title": "Datasets"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/publication.md"
}
