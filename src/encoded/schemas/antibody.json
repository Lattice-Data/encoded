{
    "title": "Antibody",
    "description": "Schema for submitting an antibody (not including target).",
    "id": "/profiles/antibody.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["source", "application", "oligo_sequence", "control"],
    "identifyingProperties": ["uuid","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        {"$ref": "mixins.json#/aliases" },
        {"$ref": "mixins.json#/schema_version" },
        {"$ref": "mixins.json#/uuid" },
        {"$ref": "mixins.json#/standard_status" },
        {"$ref": "mixins.json#/submitted" },
        {"$ref": "mixins.json#/source" },
        {"$ref": "mixins.json#/url" },
        {"$ref": "mixins.json#/notes" },
        {"$ref": "mixins.json#/dbxrefs"}
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "antigen_description": {
            "title": "Antigen description",
            "description": "The plain text description of the antigen used in raising the antibody (e.g. amino acid residue locations of the antigen).",
            "type": "string",
            "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$",
            "formInput": "textarea"
        },
        "antigen_sequence": {
            "title": "Antigen sequence",
            "description": "The amino acid sequence of the antigen.",
            "type": "string"
        },
        "clonality": {
            "title": "Clonality",
            "description": "The diversification of the immune cell lineage to make the antibody.",
            "type": "string",
            "enum": [
                "monoclonal",
                "polyclonal"
            ]
        },
        "control": {
            "title": "Control",
            "description": "True if the antibody is used as a control.",
            "type": "boolean"
        },
        "dbxrefs": {
            "items": {
                "title": "External identifier",
                "description": "Identifier from an external resource that may have 1-to-1 or 1-to-many relationships with ENCODE objects.",
                "type":  "string",
                "pattern": "^(AR:AB_\\d+)$"
            }
        },
        "product_ids": {
            "title": "Product IDs",
            "description": "The product identifier provided by the originating lab or vendor.",
            "type": "array",
            "items": {
                "title": "Product ID",
                "type": "string",
                "pattern": "^(\\S+(\\s|\\S)*\\S+|\\S)$|^$"
            }
        },
        "host_organism": {
            "title": "Host organism",
            "description": "The organism the antibody was grown in.",
            "type": "string",
            "linkTo": "Organism"
        },
        "isotype": {
            "title": "Isotype",
            "description": "The class of antibody ( e.g. IgA, IgD, IgE, IgG or IgM)",
            "type": "string",
            "enum": [
                "IgA",
                "IgA1",
                "IgA2",
                "IgD",
                "IgE",
                "IgG",
                "IgG1",
                "IgG1κ",
                "IgG1λ",
                "IgG2",
                "IgG2a",
                "IgG2aκ",
                "IgG2aλ",
                "IgG2b",
                "IgG2bκ",
                "IgG2bλ",
                "IgG2c",
                "IgG2cκ",
                "IgG2κ",
                "IgG2λ",
                "IgG3",
                "IgG3κ",
                "IgG4",
                "IgGκ",
                "IgM",
                "IgMκ",
                "IgG2aκ/IgG2bκ",
                "serum"
            ]
        },
        "purification_methods": {
            "title": "Purification methods",
            "description": "The purification protocols used to isolate the antibody.",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "title": "Purification method",
                "description": "A purification protocol used to isolate the antibody.",
                "comment": "IMAC refers to Immobilized Metal Chelate Chromatography and IEC refers to Ion Exchange Chromatography",
                "type": "string",
                "enum": [
                    "affinity",
                    "antiserum",
                    "crude",
                    "IEC",
                    "IgG fraction",
                    "IMAC",
                    "other",
                    "Protein A",
                    "Protein A/G",
                    "Protein G",
                    "tissue culture supernatant",
                    "chromatography"
                ]
            }
        },
        "targets": {
            "title": "Targets",
            "description": "The object representing the protein, protein complex, etc. that is the intended target of the Antibody.",
            "type": "array",
            "items": {
                "title": "Target",
                "type": "string",
                "linkTo": "Target"   
            }
        },
        "oligo_sequence": {
            "title": "Oligo sequence",
            "description": "The sequence of oligonucleotide that is conjugated to the antibody. ",
            "type": "string",
            "pattern": "^[AGCT]{12,15}$"
        },
        "application": {
            "title": "Application",
            "description": "The intended purpose of using the antibody.",
            "type": "string",
            "enum": [
                "HTO",
                "ADT"
            ]
        },
        "clone_id": {
            "title": "Clone ID",
            "description": "The clone identifier assigned by the vendor.",
            "type": "string"
        }
    },
    "facets": {
        "source": {
            "title": "Source"
        },
        "application": {
            "title": "Application"
        },
        "control": {
            "title": "Control"
        },
        "targets.organism.name": {
            "title": "Target organism"
        },
        "targets.label": {
            "title": "Target",
            "type": "typeahead",
            "length": "long"
        },
        "product_ids": {
            "title": "Product ID",
            "type": "typeahead",
            "length": "long"
        },
        "clone_id": {
            "title": "Clone ID",
            "type": "typeahead",
            "length": "long"
        },
        "oligo_sequence": {
            "title": "Oligo sequence",
            "type": "typeahead",
            "length": "long"
        }
    },
    "columns": {
        "source": {
            "title": "Source"
        },
        "targets.label": {
            "title": "Targets"
        },
        "targets.organism": {
            "title": "Target organism"
        },
        "application": {
            "title": "Application"
        },
        "product_ids": {
            "title": "Product IDs"
        },
        "clone_id": {
            "title": "Clone ID"
        },
        "oligo_sequence": {
            "title": "Oligo sequence"
        },
        "clonality": {
            "title": "Clonality"
        },
        "host_organism": {
            "title": "Host organism"
        },
        "dbxrefs": {
            "title": "External resources"
        },
        "status": {
            "title": "Status"
        }
    },
    "changelog": "/profiles/changelogs/antibody.md"
}
